@import './mixin.styl';

body {
  width: 100%;
  height: 100%;
  margin: 0
}
/*-------------------------------------
┆   icon style                        ┆
└------------------------------------*/
for $size in $icon-size {
  .icon-size-{$size} {
    margin: $size px 0 $size px 0;
    font-size: $size px;
    font-weight: 400;
  }
}

/*-------------------------------------
┆   text style title|content|align    ┆
└------------------------------------*/
for $size in $font-size {
  .text-title-{$size} {
    margin: $size px 0 $size px 0;
    font-size: $size px;
    font-weight: 700;
  }

  .text-content-{$size} {
    margin: $size px 0 $size px 0;
    font-size: $size px;
    font-weight: 400;
  }
}

for $align in $prop-align {
  .text-align-{$align} {
    text-align: $align;
  }
}

/*-------------------------------------
┆   box layout border|margin          ┆
└------------------------------------*/
for $prop in $prop-border {
  .box-{$prop} {
    {$prop}: 1px solid $gray-white;
  }
}

for $prop in $prop-margin {
  for $size in $font-size {
    .box-{$prop}-{$size} {
      {$prop}: $size px;
    }
  }
}

/*-------------------------------------
┆   box size width|height             ┆
└------------------------------------*/
for $size in $box-size {
  .box-width-{$size} {
    width: $size*1%;
  }
  .box-width-{$size}vh {
    width: $size vw;
  }
  .box-width-{$size}px {
    width: $size px;
  }

  .box-height-{$size} {
    height: $size*1%;
  }
  .box-height-{$size}vh {
    height: $size vh;
  }
  .box-height-{$size}px {
    height: $size px;
  }
}

/*-------------------------------------
┆   flex layout                       ┆
└------------------------------------*/
.flex-container {
  flex-display();
  flex-direction(column);
  flex-justify-content(space-between);
  .flex-row {
    flex-display();
    flex-justify-content(space-between);
    flex(0 0 $textFlexColHeight);
    background-color: $white;
    color: $gray-black;
    .flex-col-left {
      flex-display();
      flex-justify-content(flex-end);
      flex(1);
      margin-left: $textFlexRowWidth;
      background-color: $white;
      color: $gray-black;
    }
    .flex-col-center {
      flex-display();
      flex-justify-content(center);
      flex(1);
      background-color: $white;
      color: $gray-black;
    }
    .flex-col-right {
      flex-display();
      flex-justify-content(flex-start);
      flex(1);
      background-color: $white;
      color: $gray-black;
    }
  }
}
.flex-container-column {
  flex-display();
  flex-direction(column);
  height: 300px;
  width: 300px;
  .flex-row {
    flex-display();
    height: 100px;
  }
  .flex-left, .flex-center, .flex-right {
    flex(1);
    height: 100px;
  }
}
.flex-container-article {
  flex-display();
  flex-direction(column);
  flex-justify-content(space-between);
  .flex-header, .flex-footer {
    flex(0 0 $headBarHeight);
    background-color: $dark-blue;
  }
  .flex-article {
    flex-display();
    flex(1);
    background-color: $white;
    color: $gray-black;
    .flex-nav {
      flex(0 0 $sideBarWidth);
      background-color: $light-blue;
      color: $gray-black;
    }
    .flex-aside {
      flex(0 0 $sideBarWidth);
      background-color: $light-blue;
      color: $gray-black;
    }
    .flex-body {
      flex(1);
      background-color: $white;
      color: $gray-black;
    }
  }
}
.flex-container-admin {
  flex-display();
  flex-direction(column);
  flex-justify-content(space-between);
  height: 100vh;
  white-space: nowrap;
  overflow: hidden;
  .flex-header {
    flex-display();
    flex-justify-content(space-between);
    flex-align-items(center);
    flex(0 0 $headBarHeight);
    background-color: $dark-blue;
    color: $white;
    .flex-icon {
      flex-display();
      flex-justify-content(center);
      flex-align-items(center);
      flex(0 0 $headBarIconWidth);
      min-height: $headBarHeight;
      background-color: $dark-blue;
      color: $white;
      i {
        cursor: pointer
      }
      i:hover {
        background: $black;
        opacity: 1;
        color: $light-blue;
      }
    }
    .flex-title {
      flex-display();
      flex-justify-content(flex-start);
      flex-align-items(center);
      flex(0 0 $headBarTitleWidth);
      min-height: $headBarHeight;
      background-color: $dark-blue;
      color: $white;
    }
    .flex-info {
      flex-display();
      flex-justify-content(flex-start);
      flex-align-items(center);
      flex(1);
      margin-left: 20px;
      min-height: $headBarHeight;
      background-color: $dark-blue;
      color: $white;
    }
    .flex-menu {
      flex-display();
      flex-justify-content(flex-end);
      flex-align-items(center);
      flex(1);
      min-height: $headBarHeight;
      background-color: $dark-blue;
      color: $white;
    }
    .flex-login {
      flex-display();
      flex-justify-content(center);
      flex-align-items(center);
      flex(0 0 $headBarLoginWidth);
      min-height: $headBarHeight;
      background-color: $dark-blue;
      color: $white;
    }
  }
  .flex-admin {
    flex-display();
    flex-justify-content(space-between);
    flex(1);
    background-color: $light-blue;
    color: $white;
    .flex-aside {
      flex-display();
      flex-wrap(wrap);
      flex-align-content(flex-start);
      flex(0 0 $sideBarWidth);
      background-color: $light-blue;
      color: $white;
      .flex-title {
        flex-display();
        flex-justify-content(center);
        flex-align-items(center);
        flex(1);
        background-color: $light-blue;
        color: $yellow;
        min-height: $textFlexRowHeight;
      }
      .flex-menu {
        flex-display();
        flex-justify-content(center);
        flex(1);
        background-color: $light-blue;
        color: $white;
      }
    }
    .flex-body {
      flex(1);
      background-color: $white;
      color: $gray-black;
    }
  }
  .flex-footer {
    flex-display();
    flex-justify-content(space-between);
    flex-align-items(center);
    flex(0 0 $headBarHeight);
    background-color: $dark-blue;
    color: $white;
  }
}
.flex-container-body {
  flex-display();
  flex-justify-content(space-between);
  flex(1);
  height: 100vh;
  white-space: nowrap;
  overflow: hidden;
  .flex-aside-tree {
    flex-display();
    flex-direction(column);
    flex(0 0 $sideBarWidth);
    background-color: $white;
    color: $gray-black;
    min-height: $bodyTableHeight;
    .flex-tree-title {
      flex-align-self(center);
      flex(0 0 $textFlexRowHeight);
      background-color: $white;
      color: $gray-black;
    }
    .flex-tree-content {
      flex(1);
      background-color: $white;
      color: $gray-black;
      border: 1px solid $gray-white;
      border-radius: 5px;
    }
  }
  .flex-body-table {
    flex-display();
    flex-direction(column);
    flex-justify-content(space-between);
    flex(1);
    background-color: $white;
    color: $gray-black;
    margin: 0 5px 0 5px;
    .flex-table-title {
      flex-display();
      flex(0 0 $textFlexRowHeight);
      background-color: $white;
      color: $gray-black;
      .flex-title-left {
        flex(0 0 $textFlexColWidth);
        background-color: $white;
        color: $gray-black;
      }
      .flex-title-center {
        flex-display();
        flex-direction(column);
        flex-justify-content(space-between);
        flex(1);
        background-color: $white;
        color: $gray-black;
      }
      .flex-title-right {
        flex-display();
        flex-justify-content(flex-end);
        flex(1);
        background-color: $white;
        color: $gray-black;
      }
    }
    .flex-table-content {
      flex(1);
      // aside scroll
      flex-calc-minus('--layout-width', 100vw, $sideBarWidth + 10px);
      // header tabs title toolbar column scroll pagination
      flex-calc-minus('--layout-height', 100vh, $headBarHeight + 50px + 40px + 30px + 50px + 10px + 40px);
      background-color: $white;
      color: $gray-black;
    }
    .flex-image-content {
      flex-align-self(center);
      flex(1);
      background-color: $white;
      color: $gray-black;
    }
  }
}
